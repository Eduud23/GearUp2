<!-- item_manage_order.xml -->
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:padding="16dp">

    <!-- Horizontal row for the product image and product details -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:weightSum="1">

        <!-- Product Image -->
        <ImageView
            android:id="@+id/iv_product_image"
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:layout_marginEnd="16dp"
            android:scaleType="centerCrop"
            android:contentDescription="Product Image"/>

        <!-- Product Details (name, price, quantity, and shipping method) -->
        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_weight="1">

            <!-- Product name -->
            <TextView
                android:id="@+id/tv_order_product_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Product Name"
                android:textSize="16sp"
                android:textStyle="bold"/>

            <!-- Product price -->
            <TextView
                android:id="@+id/tv_order_product_price"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="â‚± 0.00"
                android:textSize="14sp"/>

            <!-- Product quantity -->
            <TextView
                android:id="@+id/tv_order_product_quantity"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Quantity: 0"
                android:textSize="14sp"/>

            <!-- Order status -->
            <TextView
                android:id="@+id/tv_order_status"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Status: Pending"
                android:textSize="14sp"
                android:textColor="@android:color/black"/>

            <!-- Shipping method -->
            <TextView
                android:id="@+id/tv_shipping_method"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Shipping Method: Pick-Up"
                android:textSize="14sp"/>
        </LinearLayout>
    </LinearLayout>
</LinearLayout>
