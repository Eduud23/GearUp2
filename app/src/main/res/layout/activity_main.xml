<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@color/white"
    android:padding="16dp"
    tools:context=".Login">

    <!-- ScrollView to make the content scrollable -->
    <ScrollView
        android:id="@+id/mainScrollView"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:fillViewport="true">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            >

            <!-- GearUp Logo and Title -->
            <LinearLayout
                android:id="@+id/loginCardTitle"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:gravity="center"
                >

                <ImageView
                    android:layout_width="200dp"
                    android:layout_height="200dp"
                    android:src="@drawable/img_3"
                    android:layout_marginTop="20dp"
                    android:layout_gravity="center" />
            </LinearLayout>

            <!-- Login Card -->
            <LinearLayout
                android:id="@+id/loginCard"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:background="@drawable/rounded_card_bg"
                android:padding="32dp"
                android:elevation="10dp"
                android:layout_centerHorizontal="true">

                <!-- Email Field -->
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:layout_marginTop="12dp"
                    android:gravity="center_vertical">

                    <ImageView
                        android:layout_width="24dp"
                        android:layout_height="24dp"
                        android:src="@drawable/user" />

                    <EditText
                        android:id="@+id/email"
                        android:layout_width="match_parent"
                        android:layout_height="50dp"
                        android:hint="EMAIL"
                        android:textColorHint="#F4C430"
                        android:textColor="#FFFFFF"
                        android:background="@android:color/transparent"
                        android:layout_marginStart="12dp"
                        android:inputType="textEmailAddress" />
                </LinearLayout>

                <View
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:background="#F4C430"
                    android:layout_marginBottom="12dp" />

                <!-- Password Field -->
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:layout_marginTop="12dp"
                    android:gravity="center_vertical">

                    <ImageView
                        android:layout_width="24dp"
                        android:layout_height="24dp"
                        android:src="@drawable/lock" />

                    <EditText
                        android:id="@+id/password"
                        android:layout_width="0dp"
                        android:layout_weight="1"
                        android:layout_height="50dp"
                        android:hint="PASSWORD"
                        android:textColorHint="#F4C430"
                        android:textColor="#FFFFFF"
                        android:background="@android:color/transparent"
                        android:layout_marginStart="12dp"
                        android:inputType="textPassword" />

                    <!-- Eye Toggle Button -->
                    <ImageView
                        android:id="@+id/eyeToggle"
                        android:layout_width="24dp"
                        android:layout_height="24dp"
                        android:layout_marginEnd="16dp"
                        android:src="@drawable/eye_close"
                        android:contentDescription="Toggle password visibility"
                        android:layout_gravity="center_vertical"/>
                </LinearLayout>

                <View
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:background="#F4C430"
                    android:layout_marginBottom="12dp" />

                <!-- Forgot Password -->
                <TextView
                    android:id="@+id/forgot"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Forgotten your password?"
                    android:textColor="#F4C430"
                    android:textSize="13sp"
                    android:layout_marginTop="10dp" />

                <!-- Login Button -->
                <androidx.appcompat.widget.AppCompatButton
                    android:id="@+id/loginbtn"
                    android:layout_width="match_parent"
                    android:layout_height="48dp"
                    android:text="Log in"
                    android:textColor="#000000"
                    android:background="@drawable/rounded_button"
                    android:textStyle="bold"
                    android:layout_marginTop="20dp" />

                <!-- Bottom Text -->
                <TextView
                    android:id="@+id/newAccount"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="No account? Create One"
                    android:textColor="#F4C430"
                    android:textStyle="bold"
                    android:layout_gravity="center"
                    android:layout_marginTop="20dp" />
            </LinearLayout>

        </LinearLayout>
    </ScrollView>
</LinearLayout>
