<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/background_color">

    <!-- Top bar with back button, search, and filter -->
    <LinearLayout
        android:id="@+id/top_bar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:padding="10dp"
        android:background="@android:color/holo_blue_light"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent">

        <!-- Back Button -->
        <ImageView
            android:id="@+id/btn_back"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:src="@drawable/ic_back_white"
            android:layout_marginTop="5dp"
            android:contentDescription="Back"
            android:background="?android:attr/selectableItemBackground"
            android:elevation="6dp"
            android:padding="8dp" />

        <!-- Search Field -->
        <EditText
            android:id="@+id/et_search"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:layout_marginStart="8dp"
            android:hint="Search products"
            android:drawableStart="@drawable/search"
            android:background="@drawable/search_bar_background"
            android:padding="12dp"
            android:textSize="14sp" />

        <!-- Filter Button -->
        <ImageView
            android:id="@+id/spinner_category"
            android:layout_width="45dp"
            android:layout_height="45dp"
            android:layout_marginStart="8dp"
            android:src="@drawable/filter_category"
            android:contentDescription="Category Icon"
            android:background="@drawable/rounded_bg"
            android:elevation="6dp"
            android:padding="8dp" />
    </LinearLayout>

    <!-- Profile and Message Container -->
    <androidx.cardview.widget.CardView
        android:id="@+id/profile_and_message_container"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_margin="16dp"
        app:cardCornerRadius="16dp"
        app:cardElevation="8dp"
        app:layout_constraintTop_toBottomOf="@id/top_bar"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="16dp"
            android:orientation="horizontal"
            android:gravity="center_vertical">

            <!-- Profile Image -->
            <androidx.cardview.widget.CardView
                android:layout_width="100dp"
                android:layout_height="100dp"
                app:cardCornerRadius="50dp"
                app:cardElevation="4dp">

                <ImageView
                    android:id="@+id/iv_profile_image"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:scaleType="centerCrop"
                    android:contentDescription="@string/seller_profile_image_desc"
                    android:src="@drawable/gear"/>
            </androidx.cardview.widget.CardView>

            <!-- Profile Info -->
            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:orientation="vertical"
                android:paddingStart="16dp">

                <GridLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:columnCount="2"
                    android:rowCount="5"
                    android:alignmentMode="alignMargins"
                    android:padding="8dp">

                    <!-- Shop Name -->
                    <ImageView
                        android:layout_width="24dp"
                        android:layout_height="24dp"
                        android:layout_gravity="center_vertical"
                        android:src="@drawable/shop"
                        android:contentDescription="Shop Name Icon"/>

                    <TextView
                        android:id="@+id/tv_shop_name"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center_vertical"
                        android:text="Shop Name"
                        android:textSize="16sp"
                        android:layout_marginTop="5dp"
                        android:layout_marginStart="10dp"
                        android:maxLines="1"
                        android:textColor="@color/black"/>

                    <!-- Address -->
                    <ImageView
                        android:layout_width="24dp"
                        android:layout_height="24dp"
                        android:layout_gravity="center_vertical"
                        android:src="@drawable/location"
                        android:contentDescription="Address Icon"/>

                    <TextView
                        android:id="@+id/tv_address"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center_vertical"
                        android:text="Tech City"
                        android:textSize="16sp"
                        android:layout_marginStart="10dp"
                        android:maxLines="1"
                        android:textColor="@color/gray"/>

                    <!-- Phone Number -->
                    <ImageView
                        android:layout_width="24dp"
                        android:layout_height="24dp"
                        android:layout_gravity="center_vertical"
                        android:src="@drawable/phone"
                        android:contentDescription="Phone Number Icon"/>

                    <TextView
                        android:id="@+id/tv_phone_number"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center_vertical"
                        android:text="Phone Number"
                        android:textSize="16sp"
                        android:layout_marginStart="10dp"
                        android:maxLines="1"
                        android:textColor="@color/black"/>

                    <!-- Sold Count -->
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="24dp"
                        android:layout_gravity="center_vertical"
                        android:text="Sold"
                        android:layout_marginTop="5dp"/>

                    <TextView
                        android:id="@+id/tv_sold_count"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center_vertical"
                        android:text="0"
                        android:textSize="16sp"
                        android:layout_marginStart="10dp"
                        android:textColor="@color/black"/>

                    <!-- Reviews -->
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="24dp"
                        android:layout_gravity="center_vertical"
                        android:text="Reviews"
                        android:layout_marginTop="5dp"/>

                    <TextView
                        android:id="@+id/tv_review_count"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center_vertical"
                        android:text="0"
                        android:textSize="16sp"
                        android:layout_marginStart="10dp"
                        android:textColor="@color/black"/>

                    <!-- See Details -->
                    <TextView
                        android:id="@+id/tv_see_details"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="See Details"
                        android:textColor="@color/wallet_holo_blue_light"
                        android:textStyle="bold"
                        android:textSize="14sp"
                        android:layout_gravity="end"
                        android:layout_marginTop="8dp"
                        android:layout_columnSpan="2" />
                </GridLayout>
            </LinearLayout>

            <!-- Message Icon -->
            <ImageView
                android:id="@+id/iv_message_icon"
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:src="@drawable/chat2"
                android:contentDescription="Message Icon"
                android:background="@drawable/rounded_bg"
                android:elevation="6dp"
                android:padding="8dp"/>
        </LinearLayout>
    </androidx.cardview.widget.CardView>

    <!-- Product List -->
    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/rv_products"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:padding="16dp"
        app:layout_constraintTop_toBottomOf="@id/profile_and_message_container"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"/>
</androidx.constraintlayout.widget.ConstraintLayout>
