<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MeFragmentBuyer">

    <!-- ScrollView to make content scrollable -->
    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="16dp">

            <!-- Profile Image Section -->
            <androidx.cardview.widget.CardView
                android:layout_width="120dp"
                android:layout_height="120dp"
                android:layout_gravity="center"
                android:elevation="6dp"
                app:cardCornerRadius="60dp"
                android:layout_marginTop="30dp">

                <ImageView
                    android:id="@+id/profileImageView"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:src="@drawable/gear"
                    android:scaleType="centerCrop"/>
            </androidx.cardview.widget.CardView>

            <!-- Upload Button -->
            <androidx.appcompat.widget.AppCompatButton
                android:id="@+id/uploadButton"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@drawable/border"
                android:text="Upload"
                android:layout_gravity="center"
                android:layout_marginTop="8dp"/>

            <!-- User Name -->
            <TextView
                android:id="@+id/textView"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="User Name"
                android:textSize="22sp"
                android:textStyle="bold"
                android:layout_marginTop="16dp"
                android:layout_gravity="center"/>

            <!-- User Email -->
            <TextView
                android:id="@+id/emailTextView"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="useremail@example.com"
                android:textSize="16sp"
                android:layout_marginTop="8dp"
                android:layout_gravity="center"/>

            <!-- Shipping Address -->
            <TextView
                android:id="@+id/addressTextView"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="123 Main Street, City, Country"
                android:textSize="16sp"
                android:layout_marginTop="8dp"
                android:layout_gravity="center"/>

            <!-- Purchase History Button -->
            <androidx.appcompat.widget.AppCompatButton
                android:id="@+id/orderHistoryButton"
                android:layout_width="match_parent"
                android:layout_height="55dp"
                android:text="View Order History"
                android:layout_marginTop="20dp"
                android:layout_marginBottom="8dp"
                android:background="@drawable/profile_btn"
                android:gravity="center_vertical|start"
                android:drawableStart="@drawable/history"
                android:drawablePadding="16dp"
                android:paddingStart="16dp"/>

            <!-- Settings Button -->
            <androidx.appcompat.widget.AppCompatButton
                android:id="@+id/settingbutton"
                android:layout_width="match_parent"
                android:layout_height="55dp"
                android:text="Account Settings"
                android:layout_marginBottom="8dp"
                android:background="@drawable/profile_btn"
                android:gravity="center_vertical|start"
                android:drawableStart="@drawable/settings"
                android:drawablePadding="16dp"
                android:paddingStart="16dp"/>

            <!-- Edit Profile Button -->
            <androidx.appcompat.widget.AppCompatButton
                android:id="@+id/editbutton"
                android:layout_width="match_parent"
                android:layout_height="55dp"
                android:text="Edit Profile"
                android:layout_marginBottom="8dp"
                android:background="@drawable/profile_btn"
                android:gravity="center_vertical|start"
                android:drawableStart="@drawable/edit"
                android:drawablePadding="16dp"
                android:paddingStart="16dp"/>

            <!-- Logout Button -->
            <androidx.appcompat.widget.AppCompatButton
                android:id="@+id/logoutbutton"
                android:layout_width="match_parent"
                android:layout_height="55dp"
                android:text="Logout"
                android:layout_marginBottom="8dp"
                android:background="@drawable/profile_btn"
                android:gravity="center_vertical|start"
                android:drawableStart="@drawable/logout"
                android:drawablePadding="16dp"
                android:paddingStart="16dp"/>

        </LinearLayout>
    </ScrollView>
</androidx.constraintlayout.widget.ConstraintLayout>
