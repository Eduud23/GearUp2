<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="16dp"
        android:background="@color/wallet_holo_blue_light"
        android:gravity="center_vertical">

        <!-- Back Button -->
        <ImageView
            android:id="@+id/btn_back"
            android:layout_width="48dp"
            android:layout_height="48dp"
            android:src="@drawable/ic_back_white"
            android:contentDescription="Back"
            android:layout_marginEnd="10dp"
            android:background="?android:attr/selectableItemBackground"
            android:padding="12dp"/>

        <!-- Search EditText -->
        <EditText
            android:id="@+id/et_search"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:hint="Search Recommended Products"
            android:drawableStart="@drawable/search"
            android:inputType="text"
            android:drawablePadding="8dp"
            android:padding="8dp"
            android:background="@drawable/search_bar_background"
            android:textSize="14sp"/>

    </LinearLayout>

    <!-- Label for recommended products -->
    <TextView
        android:id="@+id/label_recommended_products"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Recommended Products"
        android:textSize="18sp"
        android:layout_margin="16dp"/>

    <!-- RecyclerView to display recommended products -->
    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/recyclerViewAllRecommendedProducts"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"/>
</LinearLayout>
