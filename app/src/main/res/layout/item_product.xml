<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"

    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="horizontal"
    android:padding="8dp">

    <androidx.cardview.widget.CardView

        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:layout_marginEnd="8dp"
        android:background="@drawable/border_product"
        app:cardCornerRadius="8dp"
        app:cardElevation="4dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="8dp">

            <ImageView
                android:id="@+id/iv_product_image"
                android:layout_width="match_parent"
                android:layout_height="150dp"
                android:contentDescription="@string/product_image_desc"
                android:scaleType="centerCrop" />

            <androidx.cardview.widget.CardView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="8dp"
                android:layout_gravity="start"
                android:layout_marginEnd="16dp"
                android:elevation="4dp"
                app:cardCornerRadius="100dp">

                <ImageView
                    android:id="@+id/civ_seller_profile_image"
                    android:layout_width="30dp"
                    android:layout_height="30dp"
                    android:scaleType="fitXY"
                    android:contentDescription="@string/seller_profile_image_desc"
                    android:src="@drawable/gear" />

            </androidx.cardview.widget.CardView>

            <TextView
                android:id="@+id/tv_product_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textAppearance="?android:attr/textAppearanceMedium"
                android:textColor="@android:color/black"
                android:layout_marginTop="8dp"
                android:text="Product Name" />

            <TextView
                android:id="@+id/tv_product_price"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textAppearance="?android:attr/textAppearanceSmall"
                android:textColor="@android:color/holo_red_dark"
                android:layout_marginTop="4dp"
                android:text="₱Price" />

            <TextView
                android:id="@+id/tv_product_description"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textAppearance="?android:attr/textAppearanceSmall"
                android:textColor="@android:color/darker_gray"
                android:layout_marginTop="4dp"
                android:text="Product Description"
                android:maxLines="2"
                android:ellipsize="end" />
        </LinearLayout>
    </androidx.cardview.widget.CardView>

    <!-- Second Product Card -->
    <androidx.cardview.widget.CardView
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:background="@drawable/border_product"
        app:cardCornerRadius="8dp"
        app:cardElevation="4dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="8dp">

            <ImageView
                android:id="@+id/iv_product_image_2"
                android:layout_width="match_parent"
                android:layout_height="150dp"
                android:contentDescription="@string/product_image_desc"
                android:scaleType="fitXY" />

            <androidx.cardview.widget.CardView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="8dp"
                android:layout_gravity="start"
                android:layout_marginEnd="16dp"
                android:elevation="4dp"
                app:cardCornerRadius="100dp"
                >

                <ImageView
                    android:id="@+id/civ_seller_profile_image_2"
                    android:layout_width="30dp"
                    android:layout_height="30dp"
                    android:scaleType="fitXY"
                    android:contentDescription="@string/seller_profile_image_desc"
                    android:src="@drawable/gear" />
            </androidx.cardview.widget.CardView>

            <TextView
                android:id="@+id/tv_product_name_2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textAppearance="?android:attr/textAppearanceMedium"
                android:textColor="@android:color/black"
                android:layout_marginTop="8dp"
                android:text="Product Name 2" />

            <TextView
                android:id="@+id/tv_product_price_2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textAppearance="?android:attr/textAppearanceSmall"
                android:textColor="@android:color/holo_red_dark"
                android:layout_marginTop="4dp"
                android:text="₱Price 2" />

            <TextView
                android:id="@+id/tv_product_description_2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textAppearance="?android:attr/textAppearanceSmall"
                android:textColor="@android:color/darker_gray"
                android:layout_marginTop="4dp"
                android:text="Product Description 2"
                android:maxLines="2"
                android:ellipsize="end" />
        </LinearLayout>
    </androidx.cardview.widget.CardView>

</LinearLayout>
