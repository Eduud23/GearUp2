<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@color/white">

    <!-- Toolbar with Back Button -->
    <androidx.appcompat.widget.Toolbar
        android:id="@+id/toolbar"
        android:layout_width="match_parent"
        android:layout_height="?attr/actionBarSize"
        android:background="@color/white"
        app:navigationIcon="@drawable/ic_back"
        app:titleTextColor="@android:color/black"
        app:title="             Product Details" />

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:fillViewport="true">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="16dp">

            <!-- Product Image -->
            <ImageView
                android:id="@+id/productImage"
                android:layout_width="match_parent"
                android:layout_height="300dp"
                android:scaleType="centerCrop"
                android:background="@color/light_gray"
                android:contentDescription="Product Image" />

            <!-- Product Title -->
            <TextView
                android:id="@+id/productTitle"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="12dp"
                android:text="Product Title"
                android:textSize="22sp"
                android:textColor="@color/black"
                android:textStyle="bold" />

            <!-- Price Section -->
            <TextView
                android:id="@+id/productPrice"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="â‚±0.00"
                android:textSize="20sp"
                android:textColor="@color/colorAccent"
                android:textStyle="bold"
                android:layout_marginTop="6dp" />

            <!-- Seller Information -->
            <TextView
                android:id="@+id/productSeller"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Seller: Unknown"
                android:textSize="16sp"
                android:textColor="@color/gray"
                android:layout_marginTop="4dp" />

            <!-- Product Condition -->
            <TextView
                android:id="@+id/productCondition"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Condition: New"
                android:textSize="16sp"
                android:textColor="@color/gray"
                android:layout_marginTop="4dp" />

            <!-- Location -->
            <TextView
                android:id="@+id/productLocation"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Ships from: Location"
                android:textSize="16sp"
                android:textColor="@color/gray"
                android:layout_marginTop="4dp" />

            <!-- Shipping -->
            <TextView
                android:id="@+id/productShipping"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Shipping: Free"
                android:textSize="16sp"
                android:textColor="@color/gray"
                android:layout_marginTop="4dp" />

            <!-- Divider -->
            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:background="@color/light_gray"
                android:layout_marginTop="12dp" />

            <Button
                android:id="@+id/openItemButton"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Buy Now"
                android:textSize="18sp"
                android:textStyle="bold"
                android:backgroundTint="@color/colorPrimary"
                android:textColor="@color/white"
                android:layout_marginTop="16dp"
                android:layout_marginBottom="16dp" />

        </LinearLayout>
    </ScrollView>

</LinearLayout>
